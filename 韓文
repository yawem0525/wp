    <main>
        <h2>填寫韓文單字的正確意思</h2>
        <div class="exercise">
            <div class="word">1. 가빠 (가방)</div>
            <textarea id="answer1" placeholder="請輸入答案..."></textarea>

            <div class="word">2. 하나 (하나)</div>
            <textarea id="answer2" placeholder="請輸入答案..."></textarea>

            <div class="word">3. 방위 (방위)</div>
            <textarea id="answer3" placeholder="請輸入答案..."></textarea>

            <button onclick="checkAnswers()">提交答案</button>
            <div id="result" class="answer"></div>
        </div>
    </main>

    <script>
        function checkAnswers() {
            const correctAnswers = ["包包", "一", "方位"];
            const userAnswers = [
                document.getElementById("answer1").value.trim(),
                document.getElementById("answer2").value.trim(),
                document.getElementById("answer3").value.trim()
            ];

            let result = "";

            userAnswers.forEach((answer, index) => {
                if (answer === correctAnswers[index]) {
                    result += `<p><strong>${index + 1}. 正確</strong></p>`;
                } else {
                    result += `<p><strong>${index + 1}. 錯誤</strong>，正確答案是：${correctAnswers[index]}</p>`;
                }
            });

            document.getElementById("result").innerHTML = result;
            document.getElementById("result").style.display = "block";
        }
    </script>
